#include <iostream>

int main()
{
	double nm = 0.0;
	std::cout <<"Enter a wavelength in nm: ";
	std::cin >> nm;
	if(nm<380)
	{
		std::cout <<"The entered wavelength is not apart of the visible spectrum." << std::endl;
	}
	else if(nm<450)
	{
		std::cout <<"The color is Violet." << std::endl;
	}
	else if(nm<495)
	{
		std::cout <<"The color is Blue." << std::endl;
	}
	else if(nm<570)
	{
		std::cout <<"The color is Green." << std::endl;
	}
	else if(nm<590)
	{
		std::cout <<"The color is Yellow." << std::endl;
	}
	else if(nm<620)
	{
		std::cout <<"The color is Orange." << std::endl;
	}
	else if(nm<750)
	{
		std::cout <<"The color is Red." << std::endl;
	}
	else if(nm>=750)
	{
		std::cout <<"The entered wavelength is not apart of the visible spectrum." << std::endl;
	}
return(0);
}
